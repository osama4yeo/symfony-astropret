            text-align: center;
            margin-bottom: 30px;
        }
        
    #calendar {
        max-width: 100%;
        width: 100%;
        min-height: 700px;
        background-color: #ffffff;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

        .fc-daygrid-event {
            background-color: #0d6efd !important; /* ou #198754 si tu pr√©f√®res vert */
            color: white !important;
            border: none !important;
            border-radius: 6px;
            padding: 2px 6px;
            font-size: 0.8rem;
            font-weight: 500;
            white-space: normal !important;
            overflow-wrap: break-word;
        }

        .fc-daygrid-event .fc-event-title,
        .fc-daygrid-event .fc-event-time {
            color: white !important;
        }



        .fc-toolbar-title {
            font-size: 1.4rem;
            font-weight: 500;
            color: #343a40;
        }

        .fc-button {
            background-color: #0d6efd !important;
            border: none !important;
            border-radius: 6px !important;
