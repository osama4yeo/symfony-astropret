            font-size: 0.8rem;
            font-weight: 500;
        }

        .alert-warning {
            max-width: 600px;
            margin: auto;
            padding: 10px 20px;
            font-size: 0.95rem;
        }

    </style>

{% endblock %}

{% block javascripts_page_specific %}
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const calendarEl = document.getElementById('calendar');
            const calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'fr',
                firstDay: 1,
                events: "{{ path('calendar_events') }}",

                // ‚úÖ UNE SEULE FOIS - barre de navigation compl√®te
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay,listMonth'
                },

                // ‚úÖ Traduction des boutons
                buttonText: {
                    today:    'Aujourd\'hui',
                    month:    'Mois',
                    week:     'Semaine',
                    day:      'Jour',
                    list:     'Liste'
                },

                // ‚úÖ D√©finition des vues (facultatif mais propre)
                views: {
                    dayGridMonth: { buttonText: 'Mois' },
                    timeGridWeek: { buttonText: 'Semaine' },
                    timeGridDay: { buttonText: 'Jour' },
                    listMonth:    { buttonText: 'Liste' }
                },

                // ‚úÖ Affichage personnalis√© du contenu d‚Äôun √©v√©nement
                eventContent: function(arg) {
                    return {
                        html: '<div class="fc-event-title" style="white-space: normal;">' + arg.event.title + '</div>'
                    };
                },

                // ‚úÖ Tooltip au survol
                eventDidMount: function(info) {
                    const tooltip = document.createElement('div');
                    tooltip.classList.add('fc-event-tooltip');
                    tooltip.style.position = 'absolute';
                    tooltip.style.zIndex = '1000';
                    tooltip.style.background = 'rgba(0, 0, 0, 0.75)';
                    tooltip.style.color = '#fff';
                    tooltip.style.padding = '5px 10px';
                    tooltip.style.borderRadius = '6px';
                    tooltip.style.fontSize = '0.8rem';
                    tooltip.style.display = 'none';

                    tooltip.innerText = info.event.title + (info.event.extendedProps.description ? '\n' + info.event.extendedProps.description : '');
                    document.body.appendChild(tooltip);

                    info.el.addEventListener('mouseenter', function(e) {
                        tooltip.style.display = 'block';
                        tooltip.style.left = e.pageX + 'px';
                        tooltip.style.top = e.pageY + 'px';
                    });

                    info.el.addEventListener('mousemove', function(e) {
                        tooltip.style.left = e.pageX + 10 + 'px';
                        tooltip.style.top = e.pageY + 10 + 'px';
                    });

                    info.el.addEventListener('mouseleave', function () {
                        tooltip.style.display = 'none';
                    });
                }
            });

            calendar.render();
        });
    </script>
{% endblock %}
