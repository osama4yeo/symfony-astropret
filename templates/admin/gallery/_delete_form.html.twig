{# templates/admin/gallery/_delete_form.html.twig #}
<form method="post" action="{{ path('admin_gallery_delete', {'id': gallery_item.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette image de la galerie ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ gallery_item.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>