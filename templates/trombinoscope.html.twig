{% extends 'base.html.twig' %}

{% block title %}Trombinoscope{% endblock %}

{% block body %}
    <h1>Trombinoscope</h1>
    <a href="{{ path('user_profile') }}" class="btn btn-success" style="margin-bottom: 20px;">Modifier Mon Profil</a>
    <div class="row">
        {% for user in users %}
            <div class="col-md-3" style="margin-bottom: 20px;">
                <div class="card">

                    <!-- Utilisation d'une image par défaut pour l'avatar -->
                    {% if user.avatar %}
                        <img src="{{ asset('uploads/avatars/' ~ user.avatar) }}" ...>
                    {% else %}
                        <img src="{{ asset('images/default-avatar.webp') }}" class="avatar-img" alt="Avatar par défaut">
                    {% endif %}

                    <div class="card-body">
                        <h5 class="card-title">{{ user.firstName }} {{ user.lastName }} {{ user.email }}</h5>
                        {# autres infos pour plus tard... #}
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun utilisateur trouvé.</p>
        {% endfor %}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: 0.3s;
        }
        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
        .avatar-img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        margin: 0 auto;
        display: block;
    }
    </style>
{% endblock %}
