{# templates/admin/materiel/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier le Matériel : {{ materiel.nom }}{% endblock %}

{% block body_content %}
    <div class="container mt-4">
        <h1 class="mb-4">Modifier le Matériel : <span class="text-primary">{{ materiel.nom }}</span></h1>

        {% include 'partials/_flash_messages.html.twig' ignore missing %}

        {# 'form' et 'materiel' sont les variables passées par MaterielController::edit() #}
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="row">
                <div class="col-md-8">
                    {{ form_row(form.nom) }}
                    {# {{ form_row(form.description) }} #}
                    {{ form_row(form.etat) }}
                    {{ form_row(form.imageFile, {
                        'label': 'Changer l\'image (optionnel)'
                    }) }}
                </div>
                <div class="col-md-4">
                    {% if materiel.imageFilename %}
                        <div class="mb-3">
                            <p class="mb-1"><strong>Image actuelle :</strong></p>
                            <img src="{{ asset('images/materiel/' ~ materiel.imageFilename) }}" alt="Image de {{ materiel.nom }}" class="img-fluid img-thumbnail" style="max-height: 200px;">
                        </div>
                    {% else %}
                        <div class="alert alert-info small">Aucune image actuellement associée à ce matériel.</div>
                    {% endif %}
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16" style="vertical-align: text-bottom;">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                    </svg>
                    Enregistrer les modifications
                </button>
                <a href="{{ path('admin_materiel_list') }}" class="btn btn-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16" style="vertical-align: text-bottom;">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                    </svg>
                    Annuler
                </a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}