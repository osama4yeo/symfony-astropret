{# templates/materiel/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste du Matériel{% endblock %}

{# Changement du nom du bloc ici pour correspondre à base.html.twig #}
{% block body_content %}
    <h1>Liste du Matériel Disponible</h1>

    {# Inclusion des messages flash si tu en as #}
    {% include 'partials/_flash_messages.html.twig' ignore missing %}

    {# Optionnel : Lien pour déclencher la mise à jour manuelle des statuts #}
    {# <div class="mb-3">
        <form method="post" action="{{ path('app_materiel_update_status') }}" style="display: inline;">
            <button type="submit" class="btn btn-warning">Vérifier/MAJ Statuts Matériels Terminés</button>
        </form>
    </div> #}

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>État</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for materiel_item in materiels %} {# J'ai renommé 'materiel' en 'materiel_item' pour éviter confusion avec une variable globale potentielle #}
            <tr>
                <td>{{ materiel_item.nom }}</td>
                <td>
                    {% set etat_class = materiel_item.etat == constant('App\\Entity\\Materiel::ETAT_LIBRE') ? 'success' : (materiel_item.etat == constant('App\\Entity\\Materiel::ETAT_LOUE') ? 'warning' : 'secondary') %}
                    <span class="badge bg-{{ etat_class }}">
                        {{ materiel_item.etat | capitalize }}
                    </span>
                </td>
                <td>
                    {% if materiel_item.etat == constant('App\\Entity\\Materiel::ETAT_LIBRE') %}
                        <a href="{{ path('reservation_new', {'materielId': materiel_item.id}) }}" class="btn btn-sm btn-primary">
                            Louer
                        </a>
                    {% else %}
                         <span class="text-muted fst-italic">Indisponible</span>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">Aucun matériel trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock body_content %} {# Nom du bloc mis à jour ici aussi #}