{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body_content %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mb-4 text-center">Créer un compte</h1>

                {{ form_start(registrationForm) }}
                    {# ... (autres champs du formulaire : email, prenom, nom, etc. comme avant) ... #}
                    {# Champ Email avec Floating Label #}
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'exemple@domaine.com'}}) }}
                        {{ form_label(registrationForm.email) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    {# Champ Prénom avec Floating Label #}
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Votre prénom'}}) }}
                        {{ form_label(registrationForm.prenom) }}
                        {{ form_errors(registrationForm.prenom) }}
                    </div>

                    {# Champ Nom avec Floating Label #}
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom de famille'}}) }}
                        {{ form_label(registrationForm.nom) }}
                        {{ form_errors(registrationForm.nom) }}
                    </div>

                    {# Champ Téléphone avec Floating Label #}
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 0612345678'}}) }}
                        {{ form_label(registrationForm.telephone) }}
                        {{ form_errors(registrationForm.telephone) }}
                    </div>

                    {# Champ Date de Naissance avec Floating Label #}
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.dateNaissance, {'attr': {'class': 'form-control'}}) }}
                        {{ form_label(registrationForm.dateNaissance) }}
                        {{ form_errors(registrationForm.dateNaissance) }}
                    </div>

                    {# Champ Mot de passe (RepeatedType) #}
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                        {{ form_label(registrationForm.plainPassword.first) }}
                        {{ form_errors(registrationForm.plainPassword.first) }}
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le mot de passe'}}) }}
                        {{ form_label(registrationForm.plainPassword.second) }}
                        {{ form_errors(registrationForm.plainPassword.second) }}
                    </div>
                    {{ form_errors(registrationForm.plainPassword) }}


                    {# --- MODIFICATION POUR LE CHAMP agreeTerms --- #}
                    <div class="mb-3 form-check">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        {# Personnalisation du label pour inclure le lien #}
                        <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
                            J'accepte les <a href="{{ path('app_rgpd_conditions') }}" target="_blank">conditions d'utilisation et la politique RGPD</a>.
                            {# target="_blank" pour ouvrir dans un nouvel onglet #}
                        </label>
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>
                    {# --- FIN DE LA MODIFICATION --- #}

                    <button type="submit" class="btn btn-primary w-100 mt-3">S'inscrire</button>
                {{ form_end(registrationForm) }}

                <p class="text-center mt-3">
                    Déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a>
                </p>
            </div>
        </div>
    </div>
{% endblock body_content %}